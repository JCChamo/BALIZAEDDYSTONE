<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchBeacon"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/scanButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:stateListAnimator="@null"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:elevation="5dp"
            android:text="ESCANEAR BLUETOOTH"></Button>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleSmall"
            android:layout_above="@+id/bottom_header_relativelayout"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="BEACON BLUETOOTH LOW ENERGY"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:paddingTop="40dp"
        ></TextView>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="NOMBRE:"
        android:textSize="20dp"
        android:textColor="#000"
        ></TextView>

    <TextView
        android:id="@+id/mac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MAC:"
        android:textSize="20dp"
        android:textColor="#000"
        ></TextView>

    <Button
        android:id="@+id/dataButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:stateListAnimator="@null"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:elevation="5dp"
        android:text="MOSTRAR DATOS"
        android:visibility="invisible"></Button>

    <TextView
        android:id="@+id/voltage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"
        android:visibility="invisible"
        ></TextView>

    <TextView
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="TEMPERATURA: "
        android:textSize="20dp"
        android:textColor="#000"
        android:background="@drawable/back"
        android:visibility="invisible"
        ></TextView>

    <TextView
        android:id="@+id/advertCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="NÂº ADVERT FRAMES: "
        android:textSize="20dp"
        android:textColor="#000"
        android:background="@drawable/back"
        android:visibility="invisible"
        ></TextView>

    <TextView
        android:id="@+id/uptime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="TIEMPO ENCENDIDO: "
        android:textSize="20dp"
        android:textColor="#000"
        android:background="@drawable/back"
        android:visibility="invisible"
        ></TextView>


</LinearLayout>